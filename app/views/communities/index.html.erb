<%= render 'layouts/navbar' %>
<div class='container'>
  <div class='section'>
    <p id="notice"><%= notice %></p>
    <div class='row'>
      <h1 class="header center orange-text">Communities</h1>
      <ul class="collection">
        <% @fb_communities.each do |community| %>
            <% id = @subscribed_communities_mapping[community['id']] %>
            <% if id %>
              <%= render 'subscribed_community', community: community, id: id %>
            <% else %>
              <%= render 'unsubscribed_community', community: community %>
            <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
