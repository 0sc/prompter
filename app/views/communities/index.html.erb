<p id="notice"><%= notice %></p>

<h1>Communities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @fb_communities.each do |community| %>
      <% id = @subscribed_communities_mapping[community['id']] %>
      <% if id %>
        <%= render 'subscribed_community', community: community, id: id %>
      <% else %>
        <%= render 'unsubscribed_community', community: community %>
      <% end %>
    <% end %>
  </tbody>
</table>
